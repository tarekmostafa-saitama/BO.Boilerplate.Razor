@model Application.Requests.Users.Models.AlterPasswordVm


<form asp-formhelper="true"  asp-action="AlterUserPasswordPartial" asp-controller="Users"
      asp-route-userId="@Model.UserId" method="post">

    <div class="row">
        <div class="col-md-12">
            <div class="mb-3">
                <label class="form-label" asp-for="NewPassword"> </label><span class="text-danger font-weight-extra-bold ">*</span>
                <input class="form-control" asp-for="NewPassword">
                <span class="text-danger" asp-validation-for="NewPassword"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label class="form-label" asp-for="ConfirmPassword"> </label><span class="text-danger font-weight-extra-bold ">*</span>
                <input class="form-control" asp-for="ConfirmPassword">
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>

    </div>
    <div class="row mb-4">
        <div classs="col-md-4">
            <button type="submit" class="btn btn-primary">@ViewLocalizer["save"]</button>
        </div>
    </div>
</form>