@model Application.Common.Models.UserModels.CreateUserVm

@{
    ViewData["Title"] = StringLocalizer["users_create"];
}
<div class="row mb-3">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">@ViewData["Title"]</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Home">@ViewLocalizer["layout_home"]</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Roles" asp-action="List">@ViewLocalizer["users_list"]</a>
                    </li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row mb-4">
    <div>
        <a class="btn btn-info " asp-action="List" asp-controller="Users" asp-area="Admin">@ViewLocalizer["back"] @ViewLocalizer["users_list"] </a>
    </div>
</div>

<form asp-formhelper="true" asp-action="Create" asp-controller="Users"
      method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@ViewData["Title"]</h5>
                </div>
                <div class="card-body">


                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label" asp-for="FullName">@ViewLocalizer["users_fullName"] </label><span class="text-danger font-weight-extra-bold ">*</span>
                                <input class="form-control" asp-for="FullName">
                                <span class="text-danger" asp-validation-for="FullName"></span>

                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="Email">@ViewLocalizer["users_email"] </label><span class="text-danger font-weight-extra-bold ">*</span>
                                <input class="form-control" asp-for="Email">
                                <span class="text-danger" asp-validation-for="Email"></span>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="UserName">@ViewLocalizer["users_userName"] </label><span class="text-danger font-weight-extra-bold ">*</span>
                                <input class="form-control" asp-for="UserName">
                                <span class="text-danger" asp-validation-for="UserName"></span>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="Password">@ViewLocalizer["users_password"] </label><span class="text-danger font-weight-extra-bold ">*</span>
                                <input class="form-control" asp-for="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="ConfirmPassword">@ViewLocalizer["users_confirmPassword"] </label><span class="text-danger font-weight-extra-bold ">*</span>
                                <input class="form-control" asp-for="ConfirmPassword">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div class="row mb-4">
        <div classs="col-md-4">
            <input type="submit" value="@ViewLocalizer["save"]" class="btn btn-primary">

        </div>
    </div>
</form>