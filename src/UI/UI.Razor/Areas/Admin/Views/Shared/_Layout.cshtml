    <meta content="" name="author"/>
    <!-- App favicon -->
    <link rel="shortcut icon" href="/dashboard/assets/images/favicon.ico">

    <!-- Layout config Js -->
    <script src="/dashboard/assets/js/layout.js"></script>
    @if (isRtl)
    {
        <!-- Bootstrap Css -->
        <link href="~/dashboard/assets/css/bootstrap-rtl.min.css" rel="stylesheet" type="text/css" asp-append-version="true"/>
        <!-- Icons Css -->
        <link href="~/dashboard/assets/css/icons.min.css" rel="stylesheet" type="text/css" asp-append-version="true"/>
